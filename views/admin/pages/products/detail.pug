extends ../../layouts/default.pug

block main 
  if(product.title)
    h1(class='mb-4')  #{product.title}

  if(product.price)
    div(class='mb-4') Price:  <b>#{product.price}$</b>
  
  if(product.discountPercentage)
    div(class='mb-4') Discount Percentage: <b>#{product.discountPercentage}%</b>

  if(product.stock)
    div(class='mb-4') Stock:  <b>#{product.stock}</b>

  if(product.thumbnail)
    div(class='mb-4') 
      img(src=`${product.thumbnail}` style='width: 300px')
  
  if(product.status)
    div(class='mb-4') 
      span Status: 
      if(product.status === 'active')
        span(class='badge badge-success') Active 
      else 
        span(class='badge badge-danger') Inactive 
      
  if(product.position)
    div(class='mb-4') Position: <b> #{product.position} </b>

  if(product.description)
    div Description: 
    div(class='mb-4') #{product.description}

  a(href=`${prefixAdmin}/products/edit/${product.id}` class='btn btn-success') EDIT PRODUCT

  script(src="/admin/JS/products.js") 