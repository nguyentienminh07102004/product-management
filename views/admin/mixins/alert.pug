mixin alert-success(data_time)
  -if(messages.success)
    div(class="messages info")
      div(class="alert alert-success"
          data-time=`${data_time}`
          show-alert)
        span #{messages.success}
        span(close-alert) X
mixin alert-error(data_time)
  -if(messages.error)
    div(class='messages info')
      div(class='alert alert-danger'
          data-time=data_time
          show-alert)
        span #{messages.error}
        span(close-alert) X
